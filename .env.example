# Configurações do App
APP_NAME=Finanças Pessoais

# Usuário único (sem autenticação) - usado apenas quando STORAGE_BACKEND=local
SINGLE_USER_EMAIL=meu@app.local
SINGLE_USER_NAME=Usuário

# Persistência: local | supabase
STORAGE_BACKEND=supabase

# Supabase (use quando STORAGE_BACKEND=supabase)
SUPABASE_URL=

# Recomendado (multiusuário + RLS): Anon/Public key
SUPABASE_ANON_KEY=

# Opcional (admin/seed): Service Role Key
SUPABASE_KEY=

# Modo de desenvolvimento
DEBUG=True
